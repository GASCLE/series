{% extends 'base.html.twig' %}
{% form_theme serieForm 'view/formTheme.html.twig' %}

{% block body %}
    <h2> newest series to add </h2>

    {# déclanche l'affichage #}
    {#{{ form(serieForm) }}#}

    <div class="machin">
        {{ form_start(serieForm) }}
        {# découpage par champ #}
        {{ form_label(serieForm.name) }}
        {{ form_widget(serieForm.name) }}
        {{ form_errors(serieForm.name) }}
    </div>

    {# affichage du reste du form #}
    {{ form_rest(serieForm) }}

    <button>Add serie !</button>

    {# fin du formulaire #}
    {{ form_end(serieForm) }}

{% endblock %}

{% block title %}
    {{ parent() }} | Add
{% endblock %}

