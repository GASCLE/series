<!DOCTYPE html>
<html lang="">
    <head>
        <meta charset="UTF-8">

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Lora&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/font.css') }}">

        <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        <link rel="icon" href="{{ asset('img/icon.png') }}">
        <title>{% block title %} Series ! {% endblock %}</title>


    </head>

    <body>
    {% block styleCss %}{% endblock %}

    <div class="container">
        <header>
            <h1>
                <a href="{{ path('main_home') }}"><img src="{{ asset('img/logo.svg') }}" alt="Series ! | Home"></a>
                {% include 'menu/nav.html.twig' %}
            </h1>
        </header>
            <main>
                {# pr afficher les messages flash #}
                {% for label, messages in app.flashes %}
                {% for message in messages %}
                <div class="flash flash-{{ label }}">
                    {{ message }}
                </div>
                {% endfor %}
                {% endfor %}
                {% block body %}{% endblock %}
            </main>
    <footer>
        {% include 'menu/nav.html.twig' %}
    </footer>
    </div>
    </body>
</html>
